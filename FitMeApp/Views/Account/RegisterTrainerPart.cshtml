@model FitMeApp.WEB.Contracts.ViewModels.TrainerApplicationViewModel

    <div style="text-align: center">
        <h2>Trainer part registration</h2>
    </div>
    <h4>Please, indicate the case for working as a trainer</h4>
    <hr />
    <form method="post" asp-controller="Account" asp-action="RegisterTrainerPart">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="TrainerSubscription" value="true" id="subscription">
            <label class="form-check-label" for="subscription">
                Trainer subscription
            </label>
        </div>
        <br/>
        <div class="form-check" style="display: inline-block">
            <input class="form-check-input" type="checkbox" asp-for="Contract" value="true" id="contract">
            <label class="form-check-label" for="contract">
                Contract
            </label>
        </div>
        <div class="mb-3" style="display: inline-block">
            <input type="text" class="form-control" asp-for="ContractNumber" id="formGroupExampleInput" placeholder="Contract number">
        </div>

        <div>
            <input type="hidden" asp-for="UserId" />
            <input type="submit" value="Apply for a Trainer Role" class="btn btn-dark" />
        </div>
    </form>




