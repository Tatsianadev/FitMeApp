@addTagHelper *, FitMeApp
@using System.Linq
@using System.Security.AccessControl
@using FitMeApp.Common

@inject Microsoft.AspNetCore.Identity.UserManager<User> _userManager
@model IEnumerable<FitMeApp.WEB.Contracts.ViewModels.TrainerViewModel>




<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h4>
                All Trainers on one page!
            </h4>
            <h6>
                You can use filters to find the most suitable trainer for you.
            </h6>
            <hr />
            <p>
                <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Filters
                </button>
            </p>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <form asp-controller="Trainers" asp-action="TrainersFilter" method="post">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-4">
                                    <p style="font-weight: bold">
                                        Trainers gender
                                    </p>
                                    @foreach (var gender in ViewBag.Genders)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" name="selectedGenders" type="checkbox" value="@gender" id="@gender">
                                            <label class="form-check-label" for="@gender">
                                                @gender
                                            </label>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <p style="font-weight:bold">
                                        Trainers specialization
                                    </p>
                                    @foreach (var specialization in ViewBag.Specializations)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" name="selectedSpecializations" type="checkbox" value="@specialization" id="@specialization" multiple>
                                            <label class="form-check-label" for="@specialization">
                                                @specialization training
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div>
                                <input type="submit" value="OK" class="btn btn-dark" />
                                <a asp-controller="Trainers" asp-action="Index" class="btn btn-dark">Clean filters</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <img src="/Content/images/gym4.jpg" class="d-block w-100" alt="picture" style="margin:15px">
        </div>
    </div>
</div>

<div class="container" style="border-block:solid">

    @foreach (var trainer in Model)
    {
        <div class="row" style="padding:15px; border-style:solid; border-color:grey ; margin:15px">
            <div class="col-md-4" style="text-align:center">
                <img src="@trainer.AvatarPath" alt="Alternate Text" style="height:330px; width:auto" />
            </div>
            <div class="col-md-8" style="padding:10px">
                <table class="table">
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td style="font-weight: bold">@trainer.FirstName @trainer.LastName</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Gym</td>
                            <td style="text-decoration:double">@trainer.Gym.Name </td>
                            <td>@trainer.Gym.Address</td>
                        </tr>
                        <tr>
                            <td>Specialization</td>
                            <td>@trainer.Specialization</td>
                            <td>
                                @{ string trainingsNamesEnum = "";}
                                @foreach (var training in trainer.Trainings)
                                {
                                    trainingsNamesEnum = trainingsNamesEnum + training.Name + ", ";
                                }
                                @{ trainingsNamesEnum = trainingsNamesEnum.Remove(trainingsNamesEnum.Length - 2);}

                                @trainingsNamesEnum
                            </td>
                        </tr>
                        <tr>
                            <td>Gender</td>
                            <td>@trainer.Gender</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Work hours</td>
                            <td>
                                <p>
                                    <a class="btn btn-dark btn-sm" data-bs-toggle="collapse" href="#collapse_@trainer.Id" role="button" aria-expanded="false" aria-controls="collapse_@trainer.Id">
                                        Show
                                    </a>
                                </p>
                                <div class="collapse" id="collapse_@trainer.Id">
                                    <div class="card card-body">
                                        @await Component.InvokeAsync("TrainerWorkHours", new { trainerId = trainer.Id })
                                    </div>
                                </div>
                            </td>
                            <td></td>
                        </tr>
                    <tr>
                        <td>Personal training</td>
                        <td>
                            @if (_userManager.GetUserId(User) == trainer.Id)
                            {
                                <button type="button" class="btn btn-dark btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Apply
                                </button>
                            }
                            else
                            {
                                <a asp-controller="Trainings" 
                                   asp-action="ApplyForPersonalTraining" 
                                   asp-route-trainerId="@trainer.Id" class="btn btn-dark btn-sm">Apply</a>
                            }

                        </td>
                        <td></td>
                    </tr>
                    @if (trainer.Specialization != TrainerSpecializationsEnum.personal.ToString())
                    {
                        <tr>
                            <td>Group training</td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-dark btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Choose type
                                    </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var training in trainer.Trainings.Where(x => x.Id != (int)TrainingsEnum.personaltraining))
                                        {
                                            <li><a class="dropdown-item" 
                                                   asp-controller="GroupClasses" 
                                                   asp-action="CurrentGroupClassSchedule"
                                                   asp-route-trainerId="@trainer.Id" 
                                                   asp-route-groupClassId="@training.Id">@training.Name</a></li>
                                        }
                                    </ul>
                                </div>
                            </td>
                            <td></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }

</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                You can't apply for your own training class.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
