@using Microsoft.AspNetCore.Identity
@model FitMeApp.Models.ChangeCurrentUserRolesViewModel

<h2>Edit @Model.UserFirstName @Model.UserLastName roles</h2>

<form asp-action="EditCurrentUserRoles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-light" asp-action="UserWithRolesList">Cancel</a>

</form>