@model FitMeApp.WEB.Contracts.ViewModels.CalendarPageWithEventsViewModel


<h1>Schedule</h1>
<h3>Here you can find information about all your workouts!</h3>

<div class="container">
    <div class="row">
        <div class="col-md-4" style="border-right-color:lightgray; text-align:center; padding:10px,0px,10px,0px">
            @await Html.PartialAsync("Calendar", Model)
        </div>
        <div class="col-md-8">
            @if (Model.DayOnCalendarSelected)
            {
                if (User.IsInRole("trainer"))
                {
                    if (Model.SelectedDayIsWorkOff)
                    {
                        @await Html.PartialAsync("TrainerDayOff")
                    }
                    else
                    {
                        @await Html.PartialAsync("TrainersEvents", Model)
                    }




                }
                else
                {
                    @await Html.PartialAsync("UsersEvents", Model)
                }


            }

        </div>
    </div>
 
</div>

