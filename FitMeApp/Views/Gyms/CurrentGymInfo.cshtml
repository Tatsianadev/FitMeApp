@model FitMeApp.WEB.Contracts.ViewModels.GymViewModel

<div class="container">
    <div class="row" @*style="height:400px"*@>
        <div class="col-md-6" style="padding:15px">
            <h3>@Model.Name</h3>
            <h5>@Model.Address</h5>
            <h6>@Model.Phone</h6>
            <table class="table table-borderless table-sm table-schedule">
                <tbody>
                    @foreach (var day in ViewBag.WorkHours)
                    {
                        <tr>
                            <td class="col1">@day.DayName</td>
                            <td class="col2">
                                @(day.StartTime/60).00 - @(day.EndTime/60).00
                            </td>
                        </tr>
                    }                   
            </table>
            <div style="width:100%" >
                <a asp-controller="Gyms" asp-action="Subscriptions" asp-route-gymId="@Model.Id" class="btn btn-dark" style="width:50%">Subscriptions</a>
            </div>
            
        </div>
        <div class="col-md-6" style="padding:15px">
            <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                <div class="carousel-inner">
                    <div class="carousel-item active" >
                        <img src="/Content/@Model.Name/1.jpg" class="d-block w-100" alt="..." style="height:400px ; width: auto">
                    </div>
                    @for (int i = 2; i < 5; i++)
                    {
                        string picturePath = "/Content/" + Model.Name + "/" + i + ".jpg";
                        <div class="carousel-item">
                            <img src="@picturePath" class="d-block w-100" alt="..." style="height:400px ; width: auto">
                        </div>
                    }                  
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

    </div>

</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="row" style="height:65px; text-align:center">
                <h3>Trainers</h3>
            </div>
            <div style="height:80%; text-align:center">
                <img src="/Content/images/SmartTrainer.jpg" alt="Alternate Text" style="height:250px; width:auto" />
            </div>
        </div>
        <div class="col-md-9">
            <div class="container">
                <div class="row">
                    @foreach (var trainer in Model.Trainers)
                    {
                        string picturePath = "/Content/Trainers/" + trainer.Picture;
                        <div class="col-md-3">
                            <div class="card" style="width: 170px;">
                                <div style="height: 170px; text-align: center">
                                    <img src="@picturePath" class="card-img-top" alt="..." style="height:100%; width:auto">
                                </div>                                
                                <div class="card-body" style="text-align: center">
                                    <h6 class="card-title">@trainer.FirstName @trainer.LastName</h6>
                                    <p class="card-text" style="font:small">Some information about current trainer</p>
                                    <a href="#" class="btn btn-dark btn-sm">Show more</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>

        </div>

    </div>
    <hr />
    <div class="row">
        <div class="col-md-9">
            <div class="container">
                <div class="row">

                    @foreach (var training in ViewBag.Trainings)
                    {
                        
                        string picturePath = "/Content/GroupClasses/" + training.Name + ".jpg";
                        <div class="col-md-4">
                            <div class="card" style="width: 250px;">
                                <div style="height: 150px; text-align: center">
                                    <img src="@picturePath" class="card-img-top" alt="..." style="height:100%; width:auto">
                                </div>
                                <div class="card-body" style="text-align: center">
                                    <h6 class="card-title">@training.Name</h6>
                                    <p class="card-text" style="font:small">@training.Description</p>
                                    <a href="#" class="btn btn-dark btn-sm">Show more</a>
                                </div>
                            </div>
                        </div>

                    }
                </div>                
            </div>
        </div>
        <div class="col-md-3">
            <div class="row" style="height:65px; text-align:center">
                <h3>Group trainings</h3>
            </div>
            <div style="text-align:center">
                <img src="/Content/images/GroupTraining2.jpg" alt="Alternate Text" style="height:200px; width:auto" />
            </div>
        </div>


    </div>

</div>
