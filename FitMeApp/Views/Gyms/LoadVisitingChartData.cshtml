@model FitMeApp.Models.ExcelModels.VisitingChartExcelFileViewModel


<h3>Visiting statistic</h3>
<hr/>

<div class="container">
    <div>
        <h5>
            To load visiting data do some steps below:
        </h5>
        <h6>
            1. Download the blank by pressing the button
        </h6>
        <a href="@Model.BlankFullPath" download="VisitingBlank" class="btn btn-dark">Download blank</a>
        <br />
        <br />
        <h6>
            2. Fill out the columns "Visitors" in the downloaded blank and save the changes. 
        </h6>
        <h6>
            3. Load filled blank by pressing the button bellow:
        </h6>
        <form asp-controller="Gyms" asp-action="LoadVisitingChartFile" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="GymId"/>
            <input type="hidden" asp-for="GymName"/>
            <div class="form-group" style="text-align: left">
                <label asp-for="VisitingChartFile" class="control-label">Load visiting data</label>
                <input type="file" asp-for="VisitingChartFile" class="form-control" accept=".xlsx" style="width: 80%"/>
            </div>
            <input type="submit" value="Save" class="btn btn-outline-secondary"/>
        </form>
        <br />
        <br />
        <h6>
            4. Once you make all the steps, you could see the char on your Gym page.
        </h6>
    </div>
</div>