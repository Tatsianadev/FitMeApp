@model IEnumerable<FitMeApp.WEB.Contracts.ViewModels.GymViewModel>


<div class="container">
    <table>
        <tr>
            <td>Gyms</td>
            <td>Training type</td>
            <td>Trainers</td>
            <td>Basis for access</td>
            <td>Start date</td>
            <td>Expiry date</td>
        </tr>
    </table>

</div>
<div>
    <p>
        <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Filters
        </button>
    </p>
    <div class="collapse" id="collapseExample">
        <div class="card card-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <p style="font:bold">
                            Address
                        </p>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="district 1">
                            <label class="form-check-label" for="flexCheckDefault">
                                district 1
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="district 2">
                            <label class="form-check-label" for="flexCheckDefault">
                                district 2
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="district 3">
                            <label class="form-check-label" for="flexCheckDefault">
                                district 3
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p style="font:bold">
                            Group classes
                        </p>
                        @foreach (var groupClassName in ViewBag.GroupClassNames)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@groupClassName" id="@groupClassName">
                                <label class="form-check-label" for="flexCheckDefault">
                                    @groupClassName
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        @foreach (var gym in Model)
        {
            <div class="col-md-3" style="border:groove">
                <div id="carouselExampleControlsNoTouching_@gym.Id" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/Content/@gym.Name/1.jpg" class="d-block w-100" alt="picture 1">
                        </div>
                        @for (int i = 2; i < 5; i++)
                        {
                            string path = "/Content/"+gym.Name+"/"+i+".jpg";
                            <div class="carousel-item">
                                <img src=@path class="d-block w-100" alt="picture 2">
                            </div>
                        }


                        @*<div class="carousel-item">
                            <img src="/Content/Gym 1/3.jpeg" class="d-block w-100" alt="picture 3">
                        </div>
                        <div class="carousel-item">
                            <img src="/Content/Gym 1/4.jpg" class="d-block w-100" alt="picture 4">
                        </div>
                        <div class="carousel-item">
                            <img src="/Content/Gym 1/5.jpg" class="d-block w-100" alt="picture 5">
                        </div>*@
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching_@gym.Id" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching_@gym.Id" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div>

                    <h3>
                    </h3>
                </div>
            </div>

        }


    </div>
</div>
