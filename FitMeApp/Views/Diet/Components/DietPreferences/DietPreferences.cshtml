@model FitMeApp.WEB.Contracts.ViewModels.DietPreferencesViewModel

<div class="container border1" style="margin: 15px">
    <form asp-action="DietPlan" asp-controller="Diet" method="post">
        <div class="row">
            <div class="accordion" id="lovedNutrients">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Loved protein sources
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            @{
                                int allElements = Model.AllNutrients.Proteins.Count;
                                int rowCount = allElements / 3;
                                int indexFirstInColumn = 0;
                                int indexLastInColumn = rowCount;
                            }
                            <div class="container">
                                <div class="row">
                                    @for (int col = 0; col < 3; col++)
                                    {
                                        <div class="col-md-4">
                                            @for (int row = indexFirstInColumn; row < indexLastInColumn; row++)
                                            {
                                                var element = Model.AllNutrients.Proteins.ElementAt(row);
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name ="@Model.LovedNutrients.Proteins" value="@element" id="@row">
                                                    <label class="form-check-label" for="@row">
                                                        @element
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                        indexFirstInColumn += rowCount;
                                        indexLastInColumn = (indexLastInColumn + rowCount) > allElements ? allElements : (indexLastInColumn + rowCount);
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
