@model IEnumerable<FitMeApp.Common.User>

@{
    ViewBag.Title = "List of Trainers clients";
}

<style>
    div.scrollClientList {
        width: 100%;
        height: 500px;
        overflow-x: hidden;
        overflow-y: auto;
        margin: 5px 0px;
    }
</style>



<div class="container">
    <div class="row">
        <h3> Clients </h3>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="card card-body">
                <form asp-controller="Profile" asp-action="ClientsList" method="post">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div> Show:</div>

                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="showOnlyActualClients" value="true" id="flexRadioDefault1">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Actual clients
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="showOnlyActualClients" value="false" id="flexRadioDefault1">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        All clients
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div>
                            <input type="submit" value="Show" class="btn btn-dark" />
                            <a asp-controller="Profile" asp-action="ClientsList" class="btn btn-outline-dark">Clean filter</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-9">
            <table class="table">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Year</th>
                    <th>Gender</th>
                    <th></th>
                </tr>
            </table>
            <div class="scrollClientList" id="scrollClientList">
                <table class="table">
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.FirstName</td>
                            <td>@client.LastName</td>
                            <td>@client.Email</td>
                            <td>@client.PhoneNumber</td>
                            <td>@client.Year</td>
                            <td>@client.Gender</td>
                            <td>
                                <a class="btn btn-outline-secondary" asp-action="ClientSubscription" asp-route-clientId="@client.Id">Show subscription</a>
                            </td>
                        </tr>
                    }
                </table>
                <div>
                    <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Back</a>
                </div>
            </div>

           
        </div>

    </div>

</div>


