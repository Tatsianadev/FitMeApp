@model IEnumerable<FitMeApp.Common.User>

@{
    ViewBag.Title = "List of Users";
}


<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Year</th>
        <th>Gender</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Year</td>
            <td>@user.Gender</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditPersonalData" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div>
    <div class="row">
        <a class="btn btn-sm btn-primary" asp-action="Create">Create User</a>
        <a class="btn btn-sm btn-primary" asp-action="CreateTrainer">Create trainer</a>
    </div>
    
</div>
