@model FitMeApp.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}
<form asp-action="Edit" asp-controller="Profile">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Phone number</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Year</label>
        <input type="number" asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Gender</label>
        <input type="text" asp-for="Gender" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
        @if (User.IsInRole("trainer"))
        {
            <a asp-controller="Profile" asp-action="TrainerPersonalData" class="btn btn-dark">Back</a>
        }
        else
        {
            <a asp-controller="Profile" asp-action="UserPersonalData" class="btn btn-dark">Back</a>
        }

    </div>
</form>
