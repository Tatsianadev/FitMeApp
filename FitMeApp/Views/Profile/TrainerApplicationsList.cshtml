@model IEnumerable<FitMeApp.WEB.Contracts.ViewModels.TrainerViewModel>

@{
    ViewBag.Title = "List of Trainers";
}

<div class="container">
    <div>
        <h3> Trainer applications</h3>
    </div>
    <table class="table" style="width:50%">
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
        @{ int rowNumber = 0;}
        @foreach (var trainer in Model)
        {
            rowNumber++;

            <tr>
                <td>@rowNumber</td>
                <td>@trainer.FirstName</td>
                <td>@trainer.LastName</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="ShowTrainerApplication" asp-route-trainerId="@trainer.Id">Show application</a>
                </td>
            </tr>
        }
    </table>

</div>


