@model FitMeApp.Common.User

<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6" style="border-left:solid; border-right:solid">
            <div style="text-align:center; margin:20px">
                <label>First Name</label>
                <h5><b>@Model.FirstName</b></h5>

                <label>Last Name</label>
                <h5><b>@Model.LastName</b></h5>

                <label>Email</label>
                <h5><b>@Model.Email</b></h5>

                <label>Phone number</label>
                <h5><b>@Model.PhoneNumber</b></h5>

                <label>Year</label>
                <h5><b>@Model.Year</b></h5>

                <label>Gender</label>
                <h5><b>@Model.Gender</b></h5>

                @*<label>Avatar</label>
                    <h5><b>@Model.Avatar</b></h5>*@

                <a asp-controller="Profile" asp-action="EditPersonalData" asp-route-id="@Model.Id" class="btn btn-dark" style="width:30%">Edit</a>
                <a asp-controller="Profile" asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-dark" style="width:30%">Change Password</a>
                @if (!User.IsInRole("trainer"))
                {
                    <a asp-controller="Account" asp-action="RegisterTrainerPart" class="btn btn-dark" style="width:30%">Apply for a Trainer Role</a>
                }
            </div>
        </div>
        <div class="col-md-3">

        </div>

    </div>

</div>
