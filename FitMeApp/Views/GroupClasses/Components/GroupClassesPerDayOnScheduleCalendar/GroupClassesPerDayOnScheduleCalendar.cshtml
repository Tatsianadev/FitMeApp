@model IEnumerable<FitMeApp.WEB.Contracts.ViewModels.GroupClassScheduleViewModel>


<div class="container">
    @*<div class="row">
        <div style="font-weight: bold">@Model.FirstOrDefault()?.Date.ToString("M")</div>
    </div>*@
    @foreach (var grClass in @Model)
    {
        <a class="btn btn-outline-primary btn-sm" style="width: 100%">
            <div>@grClass.StartTime - @grClass.EndTime </div>
            @{ var placesLeft = grClass.ParticipantsLimit - grClass.ActualParticipantsCount;}
            <div style="font-size: x-small">Available: <span style="font-weight: bold"> @placesLeft</span> places</div>
        </a>
    }
</div>