@model FitMeApp.WEB.Contracts.ViewModels.SetCroupClassScheduleViewModel

<div class="container">
    <div class="row" style="text-align: center; margin: 20px 0">
        <h3>New group classes have been set successfully!</h3>
    </div>
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            @{ var dateString = @Model.Dates.FirstOrDefault().ToString("MM/dd/yyyy"); }
            <table class="table">
                <tbody>
                <tr>
                    <th scope="row">Gym:</th>
                    <td colspan="2">@Model.GymName</td>
                </tr>
                <tr>
                    <th scope="row">Class:</th>
                    <td colspan="2">@Model.SelectedGroupClassName</td>
                </tr>

                @if (!Model.SelectedDaysOfWeek.Any())
                {
                    <tr>
                        <th scope="row">Date:</th>
                        <td colspan="2">@dateString</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <th scope="row">From:</th>
                        <td colspan="2">@dateString</td>
                    </tr>
                    <tr>
                        <th scope="row">Every:</th>
                        <td colspan="2">
                            @foreach (var day in Model.SelectedDaysOfWeek)
                            {
                                string dayOfWeek = day.ToString() + Environment.NewLine;
                            }
                        </td>
                    </tr>
                }
                <tr>
                    <th scope="row">Time:</th>
                    <td colspan="2">@Model.StartTime - @Model.EndTime</td>
                </tr>
                <tr>
                    <th scope="row">Participants limit:</th>
                    <td colspan="2">@Model.ParticipantsLimit</td>
                </tr>
                </tbody>
            </table>
            <div style="text-align: center">
                <h6>
                    All information about your group classes schedule you will find in your Profile.
                </h6>
            </div>
            <div>
                <a asp-controller="Schedule" asp-action="Index" class="btn btn-outline-secondary" style="width: 20%">Ok</a>
            </div>
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>
